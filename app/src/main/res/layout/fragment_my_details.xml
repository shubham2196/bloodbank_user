<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.MyDetails_Fragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/background_layout_mydetails">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_account_blue"
                android:id="@+id/iv_account"
                />

            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="UserName "
                android:textColor="#a9a9a9"
                android:textSize="15sp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/iv_account"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_layout_mydetails">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="5dp"
                android:src="@drawable/home"
                android:id="@+id/iv_home"
                />

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Address "
                android:textColor="#a9a9a9"
                android:textSize="15sp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/iv_home"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="20dp"

            android:background="@drawable/background_layout_mydetails">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_phone"
                android:id="@+id/iv_phone"
                />

            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Phone "
                android:textColor="#a9a9a9"
                android:textSize="15sp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/iv_phone"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="20dp"

            android:background="@drawable/background_layout_mydetails">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="5dp"
                android:src="@drawable/gender_male_female"
                android:id="@+id/iv_gender"
                />

            <TextView
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Gender "
                android:textColor="#a9a9a9"
                android:textSize="15sp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/iv_gender"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="20dp"

            android:background="@drawable/background_layout_mydetails">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="5dp"
                android:src="@drawable/cake"
                android:id="@+id/iv_dob"
                />

            <TextView
                android:id="@+id/dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="DOB "
                android:textColor="#a9a9a9"
                android:textSize="15sp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/iv_dob"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="20dp"

            android:background="@drawable/background_layout_mydetails">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="5dp"
                android:src="@drawable/water"
                android:id="@+id/iv_blood"
                />

            <TextView
                android:id="@+id/bloodGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Blood Group "
                android:textColor="#a9a9a9"
                android:textSize="15sp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/iv_blood"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="20dp"

            android:background="@drawable/background_layout_mydetails">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="5dp"
                android:src="@drawable/email"
                android:id="@+id/iv_email"
                />

            <TextView
                android:id="@+id/emailId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Address "
                android:textColor="#a9a9a9"
                android:textSize="15sp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/iv_email"
                />

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>